<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:simpleType name="e-mail-url">
    <xs:restriction base="xs:string">
      <xs:pattern value="(([a-z0-9_\.-]+)@([a-z0-9_\.-]+)\.([a-z\.]{2,6}))|((https?:\/\/)?([\da-z\.-]+)\.([a-z\.]{2,6})([\/\w \.-]*)*\/?)"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="real-number">
    <xs:restriction base="xs:string">
      <xs:pattern value="[0-9+-\.][0-9]*?(\.[0-9]*?[Eef]??\+??[0-9]*?)??"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>