@model ProductsListControl.Models.RegisterModel

@{ ViewBag.Title = "Регистрация"; }

<main class="main-register">
    <div class="register-content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false)
            <div>
                @Html.LabelFor(model => model.UserName, "Введите логин:")
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div>
                @Html.LabelFor(model => model.Email, "Введите почтовый адрес:")
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div>
                @Html.LabelFor(model => model.Password, "Введите пароль:")
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div>
                @Html.LabelFor(model => model.PasswordConfirm, "Подтвердите пароль:")
                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <button class="btn btn-success" type="submit">Зарегистрироваться</button>
        }
    </div>
</main>