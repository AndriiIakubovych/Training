<Window x:Class="TextEditor.YesNoCancelWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:TextEditor" mc:Ignorable="d" Title="Сообщение" Width="352" Height="100" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" ShowInTaskbar="False" Closed="Window_Closed">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Вы хотите сохранить изменения в файле?" Margin="3, 0, 0, 0"/>
        <Button Name="yes" DockPanel.Dock="Left" Width="100" Content="Да" Margin="8, 0, 10, 10" Click="yes_Click"/>
        <Button Name="no" Width="100" Content="Нет" Margin="0, 0, 10, 10" Click="no_Click"/>
        <Button Name="cancel" DockPanel.Dock="Right" Width="100" Content="Отмена" Margin="0, 0, 8, 10" Click="cancel_Click"/>
    </DockPanel>
</Window>