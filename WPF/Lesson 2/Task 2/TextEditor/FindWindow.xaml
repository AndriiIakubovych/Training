<Window x:Class="TextEditor.FindWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:TextEditor" mc:Ignorable="d" Title="Поиск" Width="300" Height="128" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" ShowInTaskbar="False" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="2" Content="Введите текст для поиска:" Margin="5, 0, 5, 0"/>
        <TextBox Name="findText" Grid.Row="1" Grid.ColumnSpan="2" VerticalContentAlignment="Center" Margin="10, 0, 10, 0"/>
        <Button Name="find" Grid.Row="2" Content="Найти" Margin="10, 10, 5, 10" Click="Find_Click"/>
        <Button Name="cancel" Grid.Row="2" Grid.Column="1" Content="Отмена" Margin="5, 10, 10, 10" Click="Cancel_Click"/>
    </Grid>
</Window>