<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:simpleType name="genderType">
    <xs:restriction base="xs:string">
      <xs:pattern value="Мужской|Женский"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:complexType name="departmentType">
    <xs:sequence>
      <xs:element name="department" type="xs:string" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
  <xs:simpleType name="salaryType">
    <xs:restriction base="xs:float">
      <xs:minExclusive value="1"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:element name="data">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="employees">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="employee" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="lname" type="xs:string"/>
                    <xs:element name="fname" type="xs:string"/>
                    <xs:element name="mname" type="xs:string"/>
                    <xs:element name="photo" type="xs:string" minOccurs="0"/>
                    <xs:element name="birthdate" type="xs:date"/>
                    <xs:element name="gender" type="genderType"/>
                    <xs:element name="address" type="xs:string" minOccurs="0"/>
                    <xs:element name="telephone" type="xs:string" minOccurs="0"/>
                    <xs:element name="department" type="xs:string"/>
                    <xs:element name="position" type="xs:string"/>
                    <xs:element name="salary" type="salaryType" minOccurs="0"/>
                    <xs:element name="contract" type="xs:string" minOccurs="0"/>
                    <xs:element name="hiredate" type="xs:date"/>
                    <xs:element name="information" type="xs:string" minOccurs="0"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="departments" type="departmentType"/>
      </xs:sequence>
    </xs:complexType>
    <xs:key name="departmentId">
      <xs:selector xpath="./departments/department"/>
      <xs:field xpath="."/>
    </xs:key>
    <xs:keyref name="referenceDepartmentId" refer="departmentId">
      <xs:selector xpath="./employees/employee/department"/>
      <xs:field xpath="."/>
    </xs:keyref>
  </xs:element>
</xs:schema>