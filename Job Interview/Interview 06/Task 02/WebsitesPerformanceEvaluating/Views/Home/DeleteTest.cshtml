@model WebsitesPerformanceEvaluating.Models.Test

@using (Ajax.BeginForm("DeleteTest", null, new AjaxOptions { OnSuccess = "onDeleteTestSuccess" }, new { enctype = "multipart/form-data" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <span>Delete data</span>
            <button class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <span>Test data will be permanently removed!</span>
            @Html.HiddenFor(model => model.TestId)
        </div>
        <div class="modal-footer">
            <button class="btn btn-success ok" type="submit"><i class="fa fa-check"></i> OK</button>
            <button class="btn btn-danger cancel" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
        </div>
    </div>
}