@using WebsitesPerformanceEvaluating.Helpers

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jquery-validate")
        @Scripts.Render("~/bundles/custom")
    </head>
    <body>
        <header>
            <a class="logo" href="@Url.Action("Index")"><img src="../../Content/Images/logo.png" alt="Logo"/></a>
            <ul class="menu">
                @Html.MenuLink("Test", "Index", "Home")
                @Html.MenuLink("History", "History", "Home")
            </ul>
        </header>
        <main>
            @RenderBody()
            @RenderSection("scripts", required: false)
        </main>
        <footer>
            <p>Made by Andrii Iakubovych © 2019</p>
        </footer>
        @Scripts.Render("~/bundles/bootstrap")
    </body>
</html>